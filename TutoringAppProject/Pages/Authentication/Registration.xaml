<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutoringAppProject.Pages.Authentication.Registration"
             BackgroundImageSource="background2.jpg">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="0" VerticalOptions="Center">
                <Image Source="tutoring.jfif" VerticalOptions="Start" />
                <Label x:Name="LblHeader" Text="Register Now and join the Infinity Family!"
                        FontSize="Large"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                         HorizontalTextAlignment="Center"/>
                <Entry x:Name="UserEdit"
                        Placeholder="Username"
                        FontSize="Large"/>
                <Entry x:Name="PassEdit"
                        Placeholder="Password"
                        FontSize="Large"
                        IsPassword="True"/>
                <Entry x:Name="FNameEdit"
                        Placeholder="FirstName"
                        FontSize="Large"/>
                <Entry x:Name="LNameEdit"
                        Placeholder="LastName"
                        FontSize="Large"/>
                <Entry x:Name="EmailEdit"
                        Placeholder="Email"
                        FontSize="Large"/>
                <Entry x:Name="PhoneEdit"
                        Placeholder="Phone Number"
                        FontSize="Large"
                        Keyboard="Telephone"/>
                <Button x:Name="RegisterBtn"
                        Text="Register"
                        Font="large"
                        BackgroundColor="LightBlue"
                        Clicked="register_btn_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>