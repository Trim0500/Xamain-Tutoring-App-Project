<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutoringAppProject.Pages.UserOperations.UserPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="TeacherToolbar"
                     Text="Teachers"
                     Clicked="teacher_toolbar_Clicked">
        </ToolbarItem>
       
        <ToolbarItem x:Name="TutorToolbar"
                     Text="Tutors"
                     Clicked="tutor_toolbar_Clicked">
        </ToolbarItem>

        <ToolbarItem x:Name="StudentToolbar"
                     Text="Students"
                     Clicked="student_toolbar_Clicked">
        </ToolbarItem>
        
        <ToolbarItem x:Name="LogoutToolbar"
                     Text="Logout"
                     Clicked="btnLogout_Clicked">
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <Label Text="Welcome to Tutoring!" FontSize="Large"/>

        <!-- Provide the semester list here -->
    </StackLayout>
</ContentPage>