<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutoringAppProject.Pages.SemesterRegistration">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Semester Add Page" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
            <Entry x:Name="SemesterCode" Placeholder="Semester Code" FontSize="Large"></Entry>
            <Entry x:Name="SemesterName" Placeholder="Semester Name" FontSize="Large"></Entry>
            <Entry x:Name="SemesterYear" Placeholder="2021" FontSize="Large"></Entry>
            <Button Text="Add Semester" Clicked="AddSemester" VerticalOptions="End" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>