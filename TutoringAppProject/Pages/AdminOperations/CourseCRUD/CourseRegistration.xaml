<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutoringAppProject.Pages.CourseCRUD.CourseRegistration"
             BackgroundImageSource="background2.jpg">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Course Registration Page" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
            <Entry x:Name="SemesterCode" Placeholder="Semester Code" FontSize="Large"></Entry>
            <Entry x:Name="CourseCode" Placeholder="Course Code" FontSize="Large"></Entry>
            <Entry x:Name="CourseName" Placeholder="Course Name" FontSize="Large"></Entry>
            <Button x:Name="CourseAddButton" Text="Add Course" Clicked="AddCourse" VerticalOptions="End" />
            <Button x:Name="CourseUpdateButton" Text="Update Course" Clicked="UpdateCourse" VerticalOptions="End"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>