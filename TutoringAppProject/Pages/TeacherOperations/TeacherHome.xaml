<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutoringAppProject.Pages.TeacherOperations.TeacherHome"
             BackgroundImageSource="background2.jpg">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="TutorToolbarItem"
                     Text="View Tutors' Hours"
                     Clicked="TutorToolbarItem_Clicked">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the Teacher Home"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                   FontAttributes="Italic"/>
            <Button Text="Session Grading" CornerRadius="100" BackgroundColor="LightBlue" Clicked="Button_OnClicked_SessionGrading"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>